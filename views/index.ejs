<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
  </head>
  <body>
    <form action="/" method="post">
      <input type="text" name="link" />
      <input type="submit" />
    </form>
    <% if(products) { %> <% products.forEach(product => { %>
    <ul>
      <%=product.name%>
    </ul>
    <ul>
      <%=product.price%>
    </ul>
    <ul>
      <%=product.link%>
    </ul>
    <img src="<%=product.image%>" />
    <% })} %>
  </body>
</html>
